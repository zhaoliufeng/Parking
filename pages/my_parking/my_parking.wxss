/* pages/my_parking/my_parking.wxss */

#btn_bind {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 440rpx;
  height: 85rpx;
  text-align: center;
  line-height: 85rpx;
  margin-left: -220rpx;
  border-radius: 9rpx;
  font-size: 32rpx;
  color: #fd7543;
  align-self: center;
  border: 1px solid #fd7543;
}

#btn_bind:active{
  background: #fd7543;
  color: white;
}

/* 弹窗遮罩 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  align-items: center;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: white;
  margin: -270rpx 105rpx;
  border-radius: 15rpx;
}

.modal-title {
  border-bottom: 1px solid #dedede;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  font-size: 35rpx;
  color: white;
  text-align: center;
  background: #fd7543;
}

.modal-content {
  padding: 35rpx 32rpx;
  padding-top: 25rpx;
}

.modal-input {
  display: flex;
  flex-direction: column;
  border-radius: 4rpx;
  font-size: 28rpx;
}

/*输入placeholder样式*/

.input-holder {
  color: #bababa;
  font-size: 30rpx;
}

/* 地锁绑定输入 */


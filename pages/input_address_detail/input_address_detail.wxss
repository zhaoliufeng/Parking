/* pages/input_address_detail/input_address_detail.wxss */

#input_bg {
  background: #fd7543;
  /* background: wheat; */
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
}

#input {
  margin: 10rpx;
  padding-left: 30rpx;
  padding-right: 20rpx;
  line-height: 100rpx;
  background: white;
  width: 88%;
  height: 90rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
}

#view_upload {
  color: grey;
  text-align: center;
  line-height: 90rpx;
  border-radius: 10rpx;
  background: wheat;
  width: 60%;
  height: 90rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

#view_upload:active{
  background: #d4c09b;
}

/* pages/setting/setting.wxss */

.view_item {
  margin-top: 5rpx;
  padding-left: 40rpx;
  align-items: center;
  line-height: 100rpx;
  height: 100rpx;
  display: flex;
  background: white;
}

#bg {
  position: absolute;
  height: 100%;
  width: 100%;
  background: #f5f5f5;
}

.view_item:active {
  background: #f1f1f1;
}

.view_iv_item {
  margin-right: 25rpx;
  width: 40rpx;
  height: 40rpx;
}

.tv_item {
  color: #666;
  font-size: 33rpx;
}

.iv_arrow_item {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  position: relative;
}

.arrow_item {
  position: absolute;
  right: 20rpx;
  height: 100rpx;
  width: 40rpx;
}

#blance {
  position: absolute;
  right: -20rpx;
  height: 100rpx;
}

#view_blance {
  color: #bbb;
  font-size: 33rpx;
  text-align: center;
  line-height: 100rpx;
  height: 100rpx;
  margin-right: 100rpx;
}

#item_switch {
  right: 80rpx;
}

#view_item_switch:active {
  background: white;
}

  height: 140rpx;
}

#cv_address {
  white-space: pre-line;
  line-height: 120%;
  width: 60%;
  font-size: 32rpx;
  padding: 15rpx 10rpx 15rpx 10rpx;
  border-right: 1px solid #dedede;
}

#cv_dis_price {
  width: 30%;
}

#cv_distance {
  line-height: 70rpx;
  text-align: center;
  height: 50%;

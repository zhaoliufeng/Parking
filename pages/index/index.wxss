}

#find_palce {
  margin-top: 70rpx;
  line-height: 70rpx;
  color: grey;
  text-align: center;
  align-self: center;
  font-size: 13px;
  right: 30rpx;
  opacity: 0.8;
  background: #fff;
  border-radius: 10rpx;
  border: solid 1px #fff;

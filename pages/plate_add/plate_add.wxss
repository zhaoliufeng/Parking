/* pages/plate_add/plate_add.wxss */

#bg {
  position: absolute;
  height: 100%;
  width: 100%;
  background: #f5f5f5;
}

#plate {
  border-radius: 20rpx;
  margin: 10rpx;
  display: flex;
  width: 97%;
  height: 200rpx;
  background: #0047b5;
}

#text_bg{
  color: #0047b5;
}

#plate_border {
  letter-spacing: 5rpx;
  color: white;
  font-size: 80rpx;
  line-height: 172rpx;
  text-align: center;
  margin-left: 2.2%;
  border-radius: 20rpx;
  width: 95%;
  height: 86%;
  align-self: center;
  border: solid 1px white;
}

#picker {
  position: absolute;
  top: 50rpx;
  left: 100rpx;
  width: 170rpx;
  height: 120rpx;
}

#picker_sub_view {
  width: 170rpx;
  height: 120rpx;
}

#confirm{
  color: white;
  top: 30rpx;
  position: relative;
  left: 10%;
  border-radius: 10rpx;
  text-align: center;
  line-height: 90rpx;
  background: #FD7543;
  width: 80%;
  height: 90rpx;
}

#confirm:active{
   background: #e4683a;
}

#input{
  text-align: left;
  position: relative;
  width: 500rpx;
  bottom: 125rpx;
  height: 80rpx;
  left: 312rpx;
  font-size: 80rpx;
}

.phcolor{
  color: white;
}
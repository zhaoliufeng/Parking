/* pages/account_detail/account_detail.wxss */

.view_item {
  margin-top: 5rpx;
  padding-left: 40rpx;
  align-items: center;
  line-height: 100rpx;
  height: 100rpx;
  display: flex;
  background: white;
}

#bg {
  position: absolute;
  height: 100%;
  width: 100%;
  background: #f5f5f5;
}

#group_view_avater {
  height: 190rpx;
}

.view_item:active {
  background: #f1f1f1;
}

.view_iv_item {
  width: 40rpx;
  height: 40rpx;
  vertical-align:middle;
  position:relative;
}

.tv_item {
  color: #666;
  font-size: 37rpx;
}

.iv_arrow_item {
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.arrow_item {
  position: absolute;
  right: 20rpx;
  height: 100rpx;
  width: 40rpx;
}

#arrow_item_avater {
  height: 190rpx;
  display: flex;
  align-items: center;
}

#iv_arrow_item_avater {
  line-height: 190rpx;
}

#view_avater {
  position: absolute;
  right: 80rpx;
  height: 190rpx;
  width: 150rpx;
}

#avater {
  margin-top: 20rpx;
  border-radius: 50%;
  height: 150rpx;
  width: 150rpx;
  line-height: 190rpx;
}

#blance {
  position: absolute;
  right: -20rpx;
  height: 100rpx;
}

#view_blance {
  color: #bbb;
  text-align: center;
  line-height: 100rpx;
  height: 100rpx;
  margin-right: 100rpx;
  font-weight: 300;
  font-size: 33rpx;
}

/* 弹窗遮罩 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  align-items: center;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: white;
  margin: -270rpx 105rpx;
  border-radius: 15rpx;
}

.modal-title {
  border-bottom: 1px solid #dedede;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  font-size: 35rpx;
  color: white;
  text-align: center;
  background: #fd7543;
}

.modal-content {
  padding: 35rpx 32rpx;
  padding-top: 25rpx;
}

.modal-input {
  display: flex;
  flex-direction: column;
  border-radius: 4rpx;
  font-size: 28rpx;
}

/*输入placeholder样式*/

.input-holder {
  color: #bababa;
  font-size: 30rpx;
}

/* 输入框输入 */

#inputInfo {
  border-radius: 9rpx;
  border: 1px solid #dedede;
  width: 440rpx;
  height: 75rpx;
  font-size: 28rpx;
  line-height: 65rpx;
  padding: 0 20rpx;
  color: #333;
}

.btn_model {
  margin-top: 20rpx;
  background: #fd7543;
  color: white;
  border-radius: 7rpx;
  width: 480rpx;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 27rpx;
  text-align: center;
}

#logout{
  background: #ff5050;
  color: white;
  border-radius: 15rpx;
  width: 80%;
  margin-top: 60rpx;
  position: absolute;
  left: 10%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

#logout:active{
   background: #Ef4040;
}